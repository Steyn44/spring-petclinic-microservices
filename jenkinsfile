pipeline {
    agent any

    tools {
        maven 'Default Maven'
    }

    stages {
        stage('Build and Sonar') {
            steps {
                withSonarQubeEnv() {
                    sh 'mvn clean verify sonar:sonar -Dsonar.projectKey=My_Java_Project_Sonar'
                }
            }
        }
    }
}
