pipeline {
    agent any

    tools {
        Maven3 
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv() {
                    sh 'mvn sonar:sonar -Dsonar.projectKey=My_Java_Project_Sonar'
                }
            }
        }
    }
}

