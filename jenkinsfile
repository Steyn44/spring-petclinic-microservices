pipeline {
    agent any

    tools {
        sonarQubeScanner 'SonarQube Scanner'
        Maven3 'Default Maven'
    }
    environment {
        SONAR_HOST_URL = 'http://13.127.214.92:9000'
        SONAR_LOGIN = 'squ_888824494ba783346a9ad122748d0f5da993def0'
    }

    stages {
        stage('Build and Test') {
            steps {
                sh 'mvn clean verify'
            }
        }

        stage('Check Jacoco Report Exists') {
            steps {
                sh 'ls -l target/site/jacoco/jacoco.xml || echo "jacoco.xml not found"'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv() {
                    sh '''
                        mvn sonar:sonar \
                            -Dsonar.projectKey=My_Java_Project_Sonar \
                            -Dsonar.projectName=My_Java_Project_Sonar \
                            -Dsonar.coverage.jacoco.xmlReportPaths=target/site/jacoco/jacoco.xml,target/site/jacoco-it/jacoco.xml
                    '''
                }
            }
        }
    }
}
